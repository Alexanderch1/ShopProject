@model MVC.ViewModels.Order.IndexVM

<h2>Order List</h2>

<p>@ViewBag.ErrorMessage</p>

@using (Html.BeginForm("Index", "Order", FormMethod.Get))
{
    <div>
        <label>Payment Method:</label>
        @Html.TextBoxFor(m => m.Filter.PaymentMethod)
        <input type="submit" value="Filter" />
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Order Date</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Shipping Address</th>
            <th>Is Shipped</th>
            <th>Payment Method</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Items)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@(order.Customer != null ? order.Customer.FirstName : "N/A")</td>
                <td>@(order.Product != null ? order.Product.Name : "N/A")</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice</td>
                <td>@order.ShippingAddress</td>
                <td>@(order.IsShipped ? "Shipped" : "Not Shipped")</td>
                <td>@order.PaymentMethod</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = order.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = order.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = order.Id }, new { onclick = "return confirm('Are you sure you want to delete this order?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <label>Items per Page:</label>
    <select id="itemsPerPage" onchange="changeItemsPerPage()">
        <option value="3" @(ViewBag.ItemsPerPage == 3 ? "selected" : "")>3</option>
        <option value="5" @(ViewBag.ItemsPerPage == 5 ? "selected" : "")>5</option>
        <option value="10" @(ViewBag.ItemsPerPage == 10 ? "selected" : "")>10</option>
        <option value="20" @(ViewBag.ItemsPerPage == 20 ? "selected" : "")>20</option>
    </select>
</div>

<div>
    @if (Model.Pager.PagesCount > 1)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.Pager.PagesCount; i++)
            {
                <li class="@(i == Model.Pager.Page ? "active" : "")">@Html.ActionLink(i.ToString(), "Index", new { page = i, itemsPerPage = ViewBag.ItemsPerPage })</li>
            }
        </ul>
    }
</div>

<p>@Html.ActionLink("Create New Order", "Create")</p>

@section scripts {
    <script>
        function changeItemsPerPage() {
            var itemsPerPage = document.getElementById("itemsPerPage").value;
            var urlParams = new URLSearchParams(window.location.search);
            urlParams.set("itemsPerPage", itemsPerPage);
            window.location.href = window.location.pathname + "?" + urlParams.toString();
        }
    </script>
}
